# sAIlor Backend Environment Configuration

# Population density raster file path (optional)
# Download from WorldPop or GHSL and place in data/ directory
POP_TIF_PATH=data/population_density.tif

# Maximum population density for scaling (adjust based on your raster)
POP_MAX_DENSITY=5000

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Logging
LOG_LEVEL=INFO

# Cache Configuration
CACHE_TTL=3600

# Overpass API Configuration
OVERPASS_URL=https://overpass-api.de/api/interpreter
OVERPASS_TIMEOUT=30

# Model Configuration
MODEL_PATH=cache/model.joblib
